<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="@dimen/popup_border_width"
        android:right="@dimen/popup_border_width"
        android:top="@dimen/popup_border_width">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#eabd00"
                android:startColor="#ffffff" />
            <corners
                android:topLeftRadius="@dimen/popup_title_radius"
                android:topRightRadius="@dimen/popup_title_radius" />
        </shape>
    </item>
</layer-list>
